<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="d-flex flex-sm-row align-items-sm-center gap-2">
          <div class="input-group">
            <input type="text" name="keyword"
              class="form-control" placeholder="輸入餐廳、分類" value="{{ keywords }}" 
              aria-label="Restaurant Name..." aria-describedby="search-button">
            <button class="btn btn-major" type="submit" 
              id="search-button"><i class="fas fa-search"></i>
            </button>
          </div>

          <div class="col-3 mb-4">
            <form action="/" method="POST"></form>
            <label for="sort"></label>
            <select class="form-select" name="sort" id="sort">
              <option selected>Sort</option>
              <option value="A">A → Z</option>
              <option value="Z">Z → A</option>
              <option value="category">類別</option>
              <option value="location">地區</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-sm-3">
        {{#each restaurant}}
        <div class="col">
          <div class="card mb-1">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
          
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
          
              <span class="badge rounded-pill bg-danger fw-normal">
                <i class="fas fa-star fa-xs"></i>
                {{ this.rating }}
              </span>
            </div>
          
            <div class="card-footer d-flex justify-content-end">
              <a href="/restaurants/{{ this._id }}/edit">
                <button class="btn text-primary">Edit</button>
              </a>
              <a href="/restaurants/{{ this._id }}">
                <button class="btn text-primary">Details</button>
              </a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>